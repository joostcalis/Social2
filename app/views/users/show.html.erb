<h1><%= @user.first_name %> <%= @user.last_name %></h1>
<p><%= image_tag @user.photo %></p>
<p><b>Birthday: </b><%= @user.birth_date %></p>
<p><b>City: </b><%= @user.city %></p>
<p><b>Country: </b><%= @user.country %></p>
<p><b>About Me: </b><%= @user.description %></p>
<% if current_user.id != @user.id %>
<%if current_user.friends.exclude?(@friend) %>
<%=form_for @friendrequest, url: user_friendrequests_path(@user), html: { method: :post } do |f| %>
<div>
  <%= f.submit "send request!" %>
  <% end %>
</div>
<% end %>
<% end %>
<% @user.friends.each do |friend| %>
<%= friend.first_name %>
<% end %>
  <% @friendrequests.each do |friendrequest| %>
  <p>
    <% if friendrequest.user_id == current_user.id %>
    <%if friendrequest.status == "Pending" %>
    <p>
      <%= friendrequest.friend.first_name %> <%=friendrequest.friend.last_name  %> has send you a friendrequest
    </p>
      <%= link_to "see this friendrequest", friendrequest_path(friendrequest) %>
<% end %>
    <% end %>
  <% end %>
</p>
